<?xml version="1.0" encoding="UTF-8"?>
<Configuration status="WARN">
    <Appenders>
        <Console name="Console" target="SYSTEM_OUT">
            <PatternLayout pattern="%d{HH:mm:ss} [%t] %highlight{%-5level}{FATAL=RED, ERROR=RED, WARN=YELLOW, INFO=GREEN, DEBUG=BLUE} %style{%msg}{blue}%n" />
        </Console>

        <File name="FileLogger" fileName="logs/app.log">
            <PatternLayout pattern="%d{HH:mm:ss} [%t] %highlight{%-5level}{FATAL=RED, ERROR=RED, WARN=YELLOW, INFO=GREEN, DEBUG=BLUE} %style{%msg}{blue}%n" />
        </File>
    </Appenders>

    <Loggers>
        <Root level="info">
            <AppenderRef ref="Console"/>
            <AppenderRef ref="FileLogger"/>
        </Root>
    </Loggers>
</Configuration>